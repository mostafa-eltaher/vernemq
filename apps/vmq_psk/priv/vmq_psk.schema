%% @doc Set the path to a password file.
{mapping, "vmq_psk.psk_file", "vmq_psk.file",
 [
  {default, "{{platform_etc_dir}}/vmq.psk"},
  {datatype, file}
 ]}.

%% @doc set the password reload interval in seconds, the value 0
%% disables the automatic reloading of the password file.
{mapping, "vmq_psk.psk_reload_interval", "vmq_psk.interval",
 [
  {default, 10},
  {datatype, integer}
 ]}.
